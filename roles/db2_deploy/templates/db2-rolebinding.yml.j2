apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: "{{ db2_service_account }}-rb"
  namespace: "{{ db2_namespace }}"
subjects:
  - kind: ServiceAccount
    name: "{{ db2_service_account }}"
    namespace: "{{ db2_namespace }}"
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: Role
  name: "{{ db2_service_account }}-role"