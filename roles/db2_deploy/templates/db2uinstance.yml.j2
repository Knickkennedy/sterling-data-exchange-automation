apiVersion: db2u.databases.ibm.com/v1
kind: Db2uInstance
metadata:
  name: "{{ db2_crd_name }}"
  namespace: "{{ db2_namespace }}"
spec:
  nodes: 1
  podTemplate:
    db2u:
      resource:
        db2u:
          limits:
            cpu: 4
            memory: 16Gi
  version: "{{ version }}"
  license:
    accept: true
  account:
    privileged: true
    serviceAccountName: "{{ db2_service_account }}"
    imagePullSecrets:
      - "{{ db2_registry_secret }}"
  environment:
    authentication:
      ldap:
        enabled: false
    databases:
      - name: "{{ db2_dbname }}"
        dbConfig:
        storage:
          - name: data
            type: template
            spec:
              accessModes:
                - ReadWriteOnce
              resources:
                requests:
                  storage: "{{ db2_storage_size }}"
              storageClassName: "{{ block_storage_class }}"
          - name: activelogs
            type: template
            spec:
              accessModes:
                - ReadWriteOnce
              resources:
                requests:
                  storage: 10Gi
              storageClassName: "{{ block_storage_class }}"
    dbType: db2oltp
    instance:
      password:
        value: "{{ db2_password }}"
      dbmConfig:
        DIAGLEVEL: "2"
      registry:
        DB2_4K_DEVICE_SUPPORT: "ON"
        DB2_ATS_ENABLE: "NO"
        DB2_DISPATCHER_PEEKTIMEOUT: "2"
        DB2_OBJECT_STORAGE_SETTINGS: "OFF"
    partitionConfig:
      dataOnMln0: true
      total: 1
      volumePerPartition: true
  storage:
    - name: meta
      spec:
        accessModes:
          - ReadWriteMany
        resources:
          requests:
            storage: 10Gi
        storageClassName: "{{ file_storage_class }}"
      type: create
    - name: backup
      spec:
        accessModes:
          - ReadWriteMany
        resources:
          requests:
            storage: 100Gi
        storageClassName: "{{ file_storage_class }}"
      type: create
    - name: archivelogs
      spec:
        accessModes:
          - ReadWriteMany
        resources:
          requests:
            storage: 100Gi
        storageClassName: "{{ file_storage_class }}"
      type: create
